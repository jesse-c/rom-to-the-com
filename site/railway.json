{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        { "src": "priv*", "dest": "." },
        { "src": "lib*", "dest": "." },
        { "src": "assets*", "dest": "." },
        { "src": "config/runtime.exs*", "dest": "config/" },
        { "cmd": "mix compile" },
        { "src": "rel*", "dest": "." },
        { "cmd": "mix release" }
      ]
    }
  }
}
